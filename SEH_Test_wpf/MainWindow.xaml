<Window x:Class="SEH_Test_wpf.MainWindowControls.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:uc="clr-namespace:SEH_Test_wpf.MainWindowControls"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <uc:MainWindowUserControls x:Name="userInput" Title="Enter title:" MaxLength="30" Height="50" Loaded="MainWindowUserControls_Loaded" />

        <Button Name="b1" Click="b1_Click" Content="Submit" HorizontalAlignment="Left" Margin="0,117,0,0" Grid.Row="1" VerticalAlignment="Top" Width="75"/>
        <TextBlock HorizontalAlignment="Left" Margin="24,164,0,0" Grid.Row="1" TextWrapping="Wrap" Text="Output Images Here:" VerticalAlignment="Top" Width="264" Height="110"/>

    </Grid>
</Window>
